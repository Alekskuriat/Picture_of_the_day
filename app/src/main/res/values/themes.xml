<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PictureOfTheDay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/colorSurfaceGreenTheme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemePOD" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryVariant">?themeColorPrimaryVariant</item>
        <item name="colorOnPrimary">?themeColorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?themeColorSecondary</item>
        <item name="colorSecondaryVariant">?themeColorSecondaryVariant</item>
        <item name="colorOnSecondary">?themeColorOnSecondary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">?colorSurfaceTheme</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
        <item name="textInputStyle">@style/AppInputText</item>
        <item name="chipStyle">@style/AppChips</item>
        <item name="chipGroupStyle">@style/AppChips</item>
    </style>

    <style name="AppThemePOD.GreenTheme">
        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="themeColorSecondary">@color/colorSecondaryGreenTheme</item>
        <item name="themeColorSecondaryVariant">@color/colorSecondaryVariantGreenTheme</item>
        <item name="themeColorOnPrimary">@color/white</item>
        <item name="themeColorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>


        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponentRad
        </item>

        <item name="colorSurfaceTheme">@color/colorSurfaceGreenTheme</item>


    </style>

    <style name="AppThemePOD.PinkTheme">
        <item name="themeColorPrimary">@color/pink</item>
        <item name="themeColorPrimaryVariant">@color/colorPrimaryVariantPinkTheme</item>
        <item name="themeColorSecondary">@color/colorSecondaryPinkTheme</item>
        <item name="themeColorSecondaryVariant">@color/colorSecondaryVariantPinkTheme</item>
        <item name="themeColorOnPrimary">@color/white</item>
        <item name="themeColorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponentCut
        </item>

        <item name="colorSurfaceTheme">@color/colorSurfacePinkTheme</item>

    </style>

    <style name="AppShapeAppearance.SmallComponentCut" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.SmallComponentRad" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemTextColor">?themeColorSecondaryVariant</item>
        <item name="itemIconTint">?themeColorSecondaryVariant</item>
        <item name="itemRippleColor">?themeColorPrimary</item>

    </style>

    <style name="AppInputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/text_input_selector</item>
        <item name="helperTextTextColor">?themeColorSecondary</item>
    </style>

    <style name="AppChips" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">?themeColorPrimary</item>
        <item name="rippleColor">?themeColorPrimaryVariant</item>
        <item name="android:textColor">?themeColorOnPrimary</item>
        <item name="closeIconVisible">false</item>
    </style>

</resources>




